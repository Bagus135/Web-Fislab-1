{
  "compilerOptions": {
    "module": "NodeNext", // Spesifikasi verdsi module 
    "esModuleInterop": true, // memperbolehkan untuk menggunakan defaults imports dengan commonJS modules
    "target": "ES2020", // Spesifikasi versi ECMASccript yang di compile
    "moduleResolution": "NodeNext", // Sepesifikasi typescript resolve module imports
    "outDir": "dist", // mengarahkan struktur output ke direktori tersebut
    "rootDir": "./", // root direktori yang akan dijalankan
    "strict": true, // mode ketat type-checking
    "skipLibCheck": true, // skip checking all .d.ts files
    "baseUrl": ".",
    "sourceMap": true,
    "noImplicitAny": false,
    "paths": {
      "*" : ["node_modules/*", "src/types/*"]
    }
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true,
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext"
    }
  },
  "include": ["src/**/*"], // Spesifikasi direktori yang akan dicompile
  "exclude": ["node_modules", "**/*.spec.ts",] // spesifikasi direktori yang dikecualikan atau tidak akan dicompile
}